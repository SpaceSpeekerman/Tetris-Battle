#version 330 core

layout (location = 0) in vec2 aPos;
layout (location = 1) in vec2 aUV;
layout (location = 2) in float aBlockType;

out vec2 vUV;
out float vBlockType; // 'flat' prevents interpolation of the ID

uniform mat4 uProj;

void main()
{
    vUV = aUV;
    vBlockType = aBlockType;
    
    // Standard orthographic transformation
    gl_Position = uProj * vec4(aPos, 0.0, 1.0);
}